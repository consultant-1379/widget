<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:e='urn:import:com.ericsson.eniq.events.widgets.client.button'>

    <ui:style src="dialog.css"/>

    <g:VerticalPanel styleName="{style.panelAlign}" ui:field="wrapper">
        <e:ImageButton ui:field="closeIcon" styleName="{style.closeIcon}"/>
        <g:HorizontalPanel styleName="{style.bodyPanel}">
            <g:HorizontalPanel>
                <g:Image ui:field="icon" styleName="{style.imageIcon}"/>
                <g:VerticalPanel>
                    <g:Label ui:field="titleLabel" styleName="{style.label}" addStyleNames="{style.heading}"/>
                    <g:HTML ui:field="messageLabel" styleName="{style.label}" addStyleNames="{style.contentPanel}"/>
                </g:VerticalPanel>
            </g:HorizontalPanel>

        </g:HorizontalPanel>
        <g:cell horizontalAlignment="center">
            <g:Button ui:field="closeButton" addStyleNames="{style.button}" focus="true" />
        </g:cell>
    </g:VerticalPanel>

</ui:UiBinder>